<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".shijing_grid.ShijingDescActivity">

    <LinearLayout
        android:id="@+id/shijingdesc_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@mipmap/search_background"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/shijingdesc_iv_back"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_back"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/shijingdesc_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="诗经名"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/shijingdesc_iv_bigpic"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:src="@drawable/shijing_logo"
            android:layout_margin="20dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/shijingdesc_tv_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="章节名"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/shijingdesc_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1111"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="40dp"
            android:textSize="20sp"/>
    </LinearLayout>

</ScrollView>